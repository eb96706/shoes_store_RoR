<h1>Register</h1>
<% if flash[:success] %>
	<p><%= flash[:success] %></p>
<%end %>
<% if flash[:errors]%>
	<%flash[:errors].each do |error| %>
		<p><%= error%></p>
	<%end %>
<%end %>

<form action='/users/create' method='post' >
<p>Name: <input type='text'name='user[name]' ></p>
<p>Email: <input type='text'name='user[email]'></p>
<p>Password: <input type='password' name='user[password]'></p>
<p>Confirm PW <input type='password' name='user[password_confirmation]'></p>
<p><input type='submit' value='Register'></p>
<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
</form>


<h1>Login</h1>
<% if flash[:error]%>
<p><%=flash[:error]%></p>
<%end%>
<form action='/sessions/create' method='post'>
<p>Email: <input type='text' name='user[email]'></p>
<p>Password: <input type='password' name='user[password]'></p>
<p><input type='submit' value='Login'></p>
<input type='hidden' name='authenticity_token' value='<%= form_authenticity_token%>'>
</form>